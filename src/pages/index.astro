---
import { Icon } from 'astro-icon';

let links = [
  { href: "https://www.instagram.com/appdreami", text: "Instagram", icon: "mdi:instagram" },
  { href: "https://www.linkedin.com/company/dreamiapp", text: "LinkedIn", icon: "mdi:linkedin" },
  { href: "https://dreamiapp.com/", text: "Website", icon: "mdi:web" },
  { href: "#", text: "iOS [Coming Soon]", icon: "mdi:apple", disabled: true },
  { href: "#", text: "Android [Coming Soon]", icon: "mdi:android", disabled: true },
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>Dreami</title>
    <link rel="icon" type="image/png" href="/assets/mainlogo2.png" />

    <style>
      html, body {
        margin: 0;
        padding: 0;
      }

      body {
        background: radial-gradient(circle at top, #210033, #0c0013);
        color: #ffffff;
        font-family: -apple-system, BlinkMacSystemFont, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 1rem;
      }

      .card {
        width: 100%;
        max-width: 420px;
        background: rgba(255, 255, 255, 0.06);
        backdrop-filter: blur(16px);
        border: 1px solid rgba(255, 255, 255, 0.12);
        border-radius: 16px;
        padding: 2rem;
        text-align: center;
        box-shadow: 0 12px 32px rgba(0, 0, 0, 0.4);
        animation: fadeIn 1s ease;
      }

      .logo {
        width: 90px;
        height: 90px;
        object-fit: cover;
        margin-bottom: 1rem;
        animation: float 4s ease-in-out infinite;
      }

      @keyframes float {
        0%   { transform: translateY(0); }
        50%  { transform: translateY(-6px); }
        100% { transform: translateY(0); }
      }

      h1 {
        margin: 0.2rem 0 0.4rem;
        font-size: 1.6rem;
        font-weight: 600;
        letter-spacing: 0.5px;
      }

      p {
        font-size: 0.95rem;
        color: #cbbfea;
        margin-bottom: 1.5rem;
      }

      .button-list {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
      }

      .button-list a {
        display: flex;
        align-items: center;
        justify-content: space-between;
        background-color: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.15);
        padding: 0.9rem 1.1rem;
        border-radius: 8px;
        color: #fff;
        text-decoration: none;
        transition: background 0.3s ease, transform 0.2s ease, box-shadow 0.2s ease;
        font-size: 0.9rem;
      }

      .button-list a:hover {
        background-color: rgba(255, 255, 255, 0.2);
        transform: translateY(-2px);
        box-shadow: 0 0 10px rgba(203, 191, 234, 0.3);
      }

      .button-list a[disabled] {
        background-color: rgba(255, 255, 255, 0.08);
        color: #aaa;
        pointer-events: none;
      }

      .button-list a span {
        display: flex;
        align-items: center;
        gap: 0.5rem;
      }

      .arrow-icon svg {
        font-size: 1.1em;
        color: #fff;
        transition: transform 0.2s ease-in-out;
      }

      .button-list a:hover .arrow-icon svg {
        transform: translateX(5px);
      }

      .footer {
        margin-top: 2rem;
        font-size: 0.8rem;
        color: #aaa;
      }

      @media (max-width: 480px) {
        h1 {
          font-size: 1.3rem;
        }
        p {
          font-size: 0.85rem;
        }
        .button-list a {
          font-size: 0.85rem;
        }
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
    </style>
  </head>
  <body>
    <div class="card">
      <img src="/assets/mainlogo.png" alt="Dreami Logo" class="logo" />

      <h1>Dreami</h1>
      <p>Where your dreams meet understanding</p>

      <div class="button-list">
        {links.map((link) => (
          <a href={link.href} target="_blank" disabled={link.disabled}>
            <span>
              <Icon name={link.icon} width="20px" height="20px" />
              {link.text}
            </span>
            <span class="arrow-icon">
              <Icon name="mdi:arrow-right" width="20px" height="20px" />
            </span>
          </a>
        ))}
      </div>

      <div class="footer">
        Dreami Â© {new Date().getFullYear()}
      </div>
    </div>
  </body>
</html>
