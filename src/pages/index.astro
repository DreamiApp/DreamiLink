---
import { Icon } from 'astro-icon';

let links = [
  { href: "https://www.instagram.com/appdreami", text: "Instagram", icon: "mdi:instagram" },
  { href: "https://www.linkedin.com/company/dreamiapp", text: "LinkedIn", icon: "mdi:linkedin" },
  { href: "https://dreamiapp.com/", text: "Website", icon: "mdi:web" },
  { href: "#", text: "iOS [Coming Soon]", icon: "mdi:apple", disabled: true },
  { href: "#", text: "Android [Coming Soon]", icon: "mdi:android", disabled: true },
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>Dreami</title>
    <link rel="icon" type="image/png" href="/assets/mainlogo2.png" />

    <style>
      /* ── ANIMATED GRADIENT FOR PRELOADER ───────────────────────────────────── */
      @keyframes gradientBG {
        0%   { background-position: 0% 50%; }
        50%  { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
      }

      /* ── PRELOADER ─────────────────────────────────────────────────────────── */
      #preloader {
        position: fixed;
        inset: 0;
        background: linear-gradient(135deg, #210033, #3b0044, #0c0013, #440033);
        background-size: 400% 400%;
        animation: gradientBG 10s ease infinite;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        z-index: 9999;
        transition: opacity 0.5s ease;
      }
      #preloader.hidden {
        opacity: 0;
        pointer-events: none;
      }

      /* Spinner animation on load screen */
      #preloader img {
        width: 120px;
        height: 120px;
        animation: spin 5s linear infinite;
        will-change: transform;
      }
      @keyframes spin {
        from { transform: rotate(0deg); }
        to   { transform: rotate(360deg); }
      }

      /* loading text */
      .loader-text {
        margin-top: 1rem;
        color: #cbbfea;
        font-size: 0.9rem;
        letter-spacing: 0.5px;
        animation: textFade 1.5s ease-in-out infinite alternate;
      }
      @keyframes textFade {
        from { opacity: 0.5; }
        to   { opacity: 1;   }
      }

      /* ── BASIC RESET & LAYOUT ───────────────────────────────────────────── */
      html, body { margin: 0; padding: 0; }
      body {
        background: radial-gradient(circle at top, #210033, #0c0013);
        color: #fff;
        font-family: -apple-system, BlinkMacSystemFont, sans-serif;
        display: flex; justify-content: center; align-items: center;
        min-height: 100vh; padding: 1rem;
      }
      .card {
        width: 100%; max-width: 420px;
        background: rgba(255,255,255,0.06);
        backdrop-filter: blur(16px);
        border: 1px solid rgba(255,255,255,0.12);
        border-radius: 16px;
        padding: 2rem; text-align: center;
        box-shadow: 0 12px 32px rgba(0,0,0,0.4);
        animation: fadeIn 1s ease;
      }
      .logo {
        width: 90px; height: 90px; margin-bottom: 1rem;
        animation: float 4s ease-in-out infinite;
      }
      @keyframes float {
        0%,100% { transform: translateY(0); }
        50%     { transform: translateY(-6px); }
      }
      h1 {
        margin: 0.2rem 0 0.4rem;
        font-size: 1.6rem; font-weight: 600; letter-spacing: 0.5px;
      }
      p {
        font-size: 0.95rem; color: #cbbfea; margin-bottom: 1.5rem;
      }
      .button-list {
        display: flex; flex-direction: column; gap: 0.75rem;
      }
      .button-list a {
        display: flex; align-items: center; justify-content: space-between;
        background: rgba(255,255,255,0.1);
        border: 1px solid rgba(255,255,255,0.15);
        padding: 0.9rem 1.1rem; border-radius: 8px;
        color: #fff; text-decoration: none;
        transition: transform 0.2s, box-shadow 0.2s;
        opacity: 0; transform: translateY(10px);
        animation: popIn 0.4s forwards;
      }
      .button-list a:nth-child(1) { animation-delay: 0.15s; }
      .button-list a:nth-child(2) { animation-delay: 0.30s; }
      .button-list a:nth-child(3) { animation-delay: 0.45s; }
      .button-list a:nth-child(4) { animation-delay: 0.60s; }
      .button-list a:nth-child(5) { animation-delay: 0.75s; }
      @keyframes popIn {
        to { opacity: 1; transform: translateY(0); }
      }
      .button-list a:hover {
        transform: translateY(-2px);
        box-shadow: 0 0 10px rgba(203,191,234,0.3);
      }
      .button-list a[disabled] {
        background: rgba(255,255,255,0.08);
        color: #aaa; pointer-events: none;
      }
      .button-list a span {
        display: flex; align-items: center; gap: 0.5rem;
      }
      .arrow-icon svg {
        font-size: 1.1em; transition: transform 0.2s;
      }
      .button-list a:hover .arrow-icon svg {
        transform: translateX(5px);
      }
      .footer {
        margin-top: 2rem; font-size: 0.8rem; color: #aaa;
      }
      @media (max-width: 480px) {
        h1 { font-size: 1.6rem; }
        p { font-size: 1rem; line-height: 1.5; }
        .button-list a { font-size: 1rem; padding: 1.1rem; }
        .logo { width: 100px; height: 100px; }
        .card { padding: 2rem 1.25rem; }
      }
      @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to   { opacity: 1; transform: translateY(0); }
      }
    </style>
  </head>

  <body>
    <!-- Preloader Overlay -->
    <div id="preloader">
      <img src="/assets/mainlogo.png" alt="Dreami Logo" />
      <div class="loader-text">Loading Dreami…</div>
    </div>

    <!-- Main card layout -->
    <div class="card">
      <img src="/assets/mainlogo.png" alt="Dreami Logo" class="logo" loading="lazy" />
      <h1>Dreami</h1>
      <p>Where your dreams meet understanding</p>

      <div class="button-list">
        {links.map(link => (
          <a href={link.href} target="_blank" disabled={link.disabled} aria-label={`Open ${link.text}`}>
            <span>
              <Icon name={link.icon} width="20px" height="20px" />
              {link.text}
            </span>
            <span class="arrow-icon">
              <Icon name="mdi:arrow-right" width="20px" height="20px" />
            </span>
          </a>
        ))}
      </div>

      <div class="footer">Dreami © {new Date().getFullYear()}</div>
    </div>

    <!-- Loader script -->
    <script type="module">
      window.addEventListener('load', () => {
        const pre = document.getElementById('preloader');
        setTimeout(() => {
          pre.classList.add('hidden');
          pre.addEventListener('transitionend', () => pre.remove(), { once: true });
        }, 2000);
      });
    </script>
  </body>
</html>
